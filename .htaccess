RewriteEngine On
RewriteBase /

# Redirect all requests to remove the .php extension
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteCond %{REQUEST_URI} !/login\.php [NC]  # Exclude login.php from being accessed directly
RewriteRule ^ %1 [R=301,L]

# Ensure the requested filename isn't a directory
RewriteCond %{REQUEST_FILENAME} !-d

# Serve the file if it exists with .php extension, hiding the .php in the URL
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*?)/?$ $1.php [NC,L]

# Redirect access to login.php to a custom URL without .php
RewriteRule ^login/?$ login.php [NC,L]  # Access login without .php
